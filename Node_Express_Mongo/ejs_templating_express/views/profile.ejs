<!DOCTYPE html>
<html>
  <head>
    <title>Node HTML test server</title>
    <style>
      body {
        background: skyblue;
        font-family: verdana;
        color: #fff;
        padding: 30px;
      }
      h1,
      h2 {
        font-size: 48px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
      }
      h2 {
        font-size: 30px;
      }
      p,
      li {
        font-size: 16px;
        text-align: center;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
    </style>
  </head>
  <body>
    <!-- add partial view-->
    <% include partials/nav.ejs %>
    <!-- = passing data -->
    <h1>Welcome to the profile of <%= person %></h1>
    <p><strong>Age: </strong><%=data.age%></p>
    <p><strong>Job: </strong><%=data.job%></p>
    <h2>Hobbies</h2>
    <ul>
      <%data.hobbies.forEach(item =>{%>
      <li><%=item%></li>
      <%});%>
    </ul>
  </body>
</html>
